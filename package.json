{
  "name": "callback-promise",
  "version": "0.4.1",
  "description": "Convert callback style APIs to Promise based APIs",
  "module": "c2p.js",
  "main": "dist/c2p.js",
  "unpkg": "dist/c2p.min.js",
  "files": [
    "c2p.js",
    "dist/*.js"
  ],
  "reveal": true,
  "scripts": {
    "build": "npx rollup -c rollup.config.js",
    "test": "npx jest",
    "test-node": "npm run test",
    "test-cov": "npx jest --coverage",
    "test-dev": "npm run build && npm run test-cov",
    "test-browser": "npx karma start ./spec/karma.conf.js",
    "verup": "verup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/duzun/callback-promise.git"
  },
  "keywords": [
    "es6",
    "es6-promise",
    "promise",
    "promisify",
    "promisification",
    "then",
    "thenfy",
    "thenfy-all",
    "async",
    "callback",
    "simple",
    "everywhere",
    "utils"
  ],
  "author": "Dumitru Uzun <contact@duzun.me> (https://DUzun.Me)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/duzun/callback-promise/issues"
  },
  "homepage": "https://github.com/duzun/callback-promise#readme",
  "verup": {
    "files": [
      "c2p.js"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "es6-promise": "^4.2.8",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^1.3.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-jasmine": "^2.0.1",
    "karma-requirejs": "^1.1.0",
    "requirejs": "^2.3.6",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-terser": "^5.2.0",
    "verup": "^1.x"
  },
  "jshintConfig": {
    "esversion": 9,
    "laxbreak": true,
    "laxcomma": true,
    "undef": true,
    "unused": true,
    "sub": true,
    "expr": true,
    "bitwise": false,
    "eqeqeq": false,
    "boss": true,
    "eqnull": true,
    "-W041": false
  }
}
